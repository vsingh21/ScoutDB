<Window x:Class="FBLA.SearchPartnerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search Partners" Height="300" Width="400">
    <Grid Background="#2C3E50">
        <StackPanel Orientation="Vertical" Margin="20">
            <TextBlock Text="Search Partners" FontWeight="Bold" FontSize="24" Foreground="#ECF0F1" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <Label Content="Search Term:" Foreground="#ECF0F1"/>
            <TextBox Name="searchTextBox" Width="200" Margin="0,0,0,20" Height="30" FontSize="14"/>
            <Button Content="Search" Click="Search_Click" Width="100" Height="30" Background="#3498DB" Foreground="#ECF0F1" Margin="0,10,0,0"/>
            <Button Content="Cancel" Click="Cancel_Click" Width="100" Height="30" Background="#E74C3C" Foreground="#ECF0F1" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>
